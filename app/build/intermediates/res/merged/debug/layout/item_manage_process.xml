<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="vertical"
        android:background="@android:color/white"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/manage_process_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                android:text="10월 3일 마감"
                android:textColor="@android:color/black"
                fontPath="fonts/NotoSansKR-Medium-Hestia.otf"
                />
            <TextView
                android:id="@+id/manage_process_remain_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="14dp"
                android:layout_marginLeft="4dp"
                android:text="3일 남음"
                fontPath="fonts/NotoSansKR-DemiLight-Hestia.otf"
                />
            <TextView
                android:id="@+id/manage_process_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                android:text="2458"
                android:textColor="@android:color/black"
                fontPath="fonts/NotoSansKR-Medium-Hestia.otf"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_location"
                />
            <TextView
                android:id="@+id/manage_process_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="분당구 수내동 10-1 트라펠리스 910호"
                android:textColor="@android:color/black"
                fontPath="fonts/NotoSansKR-DemiLight-Hestia.otf"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>