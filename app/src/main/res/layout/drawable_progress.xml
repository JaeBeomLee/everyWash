<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/first_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_alignParentLeft="true"
            >
            <ImageView
                android:id="@+id/first_step"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_progress_none"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:layout_marginTop="8dp"
                android:text="주문요청"
                android:textColor="@color/colorPrimaryDark"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/first_layout"
            android:layout_toLeftOf="@+id/third_layout"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/between_step_12"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:adjustViewBounds="true"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark014"
                />
            <LinearLayout
                android:id="@+id/second_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                >
                <ImageView
                    android:id="@+id/second_step"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_progress_none"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:layout_marginTop="8dp"
                    android:text="요청 수락"
                    android:textColor="@color/colorPrimaryDark"
                    />
            </LinearLayout>
            <ImageView
                android:id="@+id/between_step_23"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:adjustViewBounds="true"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark014"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/third_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            >
            <ImageView
                android:id="@+id/thrid_step"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_progress_none"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:layout_marginTop="8dp"
                android:text="전달 받음"
                android:textColor="@color/colorPrimaryDark"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/third_layout"
            android:layout_toLeftOf="@+id/fifth_layout"
            >
            <ImageView
                android:id="@+id/between_step_34"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:adjustViewBounds="true"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark014"
                />
            <LinearLayout
                android:id="@+id/forth_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                >
                <ImageView
                    android:id="@+id/forth_step"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_progress_none"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:layout_marginTop="8dp"
                    android:text="세탁 중"
                    android:textColor="@color/colorPrimaryDark"
                    />
            </LinearLayout>
            <ImageView
                android:id="@+id/between_step_45"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:adjustViewBounds="true"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark014"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/fifth_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_alignParentRight="true"
            >
            <ImageView
                android:id="@+id/fifth_step"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_progress_none"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:layout_marginTop="8dp"
                android:text="세탁 완료"
                android:textColor="@color/colorPrimaryDark"
                />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>